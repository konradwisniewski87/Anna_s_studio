@page "/contact"
@inherits LayoutComponentBase
@inject I18nService I18n
@implements IDisposable

<div class="contact-hero">
    <div class="contact-overlay"></div>
    <div class="contact-content">
        <h2>@I18n.T("ContactTitle")</h2>
        <p>@I18n.T("ContactDescription")</p>
        <div class="contact-data">
            <p>
                <strong>@I18n.T("Phone"):</strong>
                <a href="tel:+447762310609" class="contact-link">+44 7762 310609</a>
            </p>
            <p>
                <strong>Email:</strong>
                <a href="mailto:annstudio.wyberton@gmail.com" class="contact-link">annstudio.wyberton@gmail.com</a>
            </p>
            <p>
                <strong>@I18n.T("Address"):</strong>
                <a href="https://maps.app.goo.gl/WvGSzcF7jA18p9L36"
                   target="_blank" rel="noopener noreferrer" class="contact-link">
                    Tytton Lane West PE21 7HN Boston, United Kingdom
                </a>
            </p>
        </div>
        <div class="contact-map mt-4">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2403.4725521318746!2d-0.04587702329219515!3d52.9579130721791!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48780981b335daa1%3A0x69fc8e8efd1686e9!2s41%20Tytton%20Ln%20W%2C%20Wyberton%2C%20Boston%20PE21%207HN%2C%20Wielka%20Brytania!5e0!3m2!1spl!2spl!4v1751971253420!5m2!1spl!2spl"
                    width="100%"
                    height="320"
                    style="border:0; border-radius: 1.2rem; box-shadow: 0 4px 24px #0002;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>


@code {
    protected override void OnInitialized()
    {
		I18n.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        I18n.OnChange -= StateHasChanged;
	}
}
