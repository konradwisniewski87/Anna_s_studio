@page "/"
@inherits LayoutComponentBase
@inject I18nService I18n
@implements IDisposable

<div style="max-width: 900px; margin: 0 auto;">
    <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/KobidoUpFace.png" class="d-block w-100" alt="@I18n.T("MasterKobidoUp")">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@I18n.T("MasterKobidoUp")</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/KobidoUpBody.png" class="d-block w-100" alt="@I18n.T("KobidoBody")">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@I18n.T("KobidoBody")</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/TransBuccal.png" class="d-block w-100" alt="@I18n.T("TransBuccal")">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@I18n.T("TransBuccal")</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/FaceTaping.png" class="d-block w-100" alt="@I18n.T("AestheticKinesiologyTaping")">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@I18n.T("AestheticKinesiologyTaping")</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/AcupunctureFace.png" class="d-block w-100" alt="@I18n.T("FacialAcupuncture")">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@I18n.T("FacialAcupuncture")</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/DeepTissueMassage.png" class="d-block w-100" alt="@I18n.T("DeepTissueMassage")">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@I18n.T("DeepTissueMassage")</h5>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


@code {
    protected override void OnInitialized()
    {
        I18n.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        I18n.OnChange -= StateHasChanged;
    }
}
