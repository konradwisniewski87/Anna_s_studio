@inject I18nService I18n

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">Studio</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/">@I18n.T("Home")</a></li>
                <li class="nav-item"><a class="nav-link" href="#services">@I18n.T("Services")</a></li>
                <li class="nav-item"><a class="nav-link" href="#gallery">@I18n.T("Gallery")</a></li>
                <li class="nav-item"><a class="nav-link" href="#contact">@I18n.T("Contact")</a></li>
            </ul>
            <div class="d-flex">
                <button class="btn btn-sm btn-outline-secondary me-1" @onclick="@(() => ChangeLang("pl"))">
                    🇵🇱
                </button>
                <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => ChangeLang("en"))">
                    🇬🇧
                </button>
            </div>
        </div>
    </div>
</nav>

@code {
    void ChangeLang(string lang)
    {
        I18n.SetLanguage(lang);
    }

    protected override void OnInitialized()
    {
        I18n.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        I18n.OnChange -= StateHasChanged;
    }
}