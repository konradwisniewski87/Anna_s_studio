                <li class="nav-item">
                    <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="ChangeLang">
                        @if (I18n.CurrentLanguage == "pl")
                        {
                            <span>🇬🇧</span>
                        }
                        else
                        {
                            <span>🇵🇱</span>
                        }
                    </button>
                </li>
            </ul>

        </div>
    </div>
</nav>

<main>
    <article class="content px-4">
        @Body
    </article>
</main>

@code {
    void ChangeLang()
    {
        if (I18n.CurrentLanguage == "pl")
            I18n.SetLanguage("en");
        else
            I18n.SetLanguage("pl");
    }

    protected override void OnInitialized()
    {
        I18n.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        I18n.OnChange -= StateHasChanged;
    }
}
